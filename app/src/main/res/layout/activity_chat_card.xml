<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".controller.ChatListAdapter"
    android:background="@color/lightblue"
    android:padding="15dp"
    android:id="@+id/constraintLayout">

    <ImageView
        android:id="@+id/chatIconIV"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:src="@drawable/baseline_chat_24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="10dp"
    />

    <TextView
        android:id="@+id/identificadorChatTV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/chatIconIV"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/darkblue"
        android:text="Identificador"
        />

    <TextView
        android:id="@+id/mensagemTV"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/identificadorChatTV"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="Lorem Ipsum Dolor Sit Amet dolor amet dolor"
        android:textColor="@color/black"
        android:lines="1"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

