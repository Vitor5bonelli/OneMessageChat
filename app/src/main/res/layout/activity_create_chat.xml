<?xml version="1.0" encoding="utf-8"?>

<ScrollView
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/constraintLayoutCL"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.CreateChatActivity"
    android:background="@color/lightblue">

    <TextView
        android:id="@+id/titleEnterChatTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkblue"
        android:text="Create a new chat!"
        android:textStyle="bold"
        android:textSize="25sp"
        android:padding="20dp"
        android:textAlignment="center"
        android:textColor="@color/lightblue"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/idInputET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID"
        android:textSize="20sp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/titleEnterChatTV"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/msgET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Initial Message"
        android:textSize="20sp"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@+id/idInputET"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/backBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:text="Go Back"
        android:textSize="25sp"
        android:backgroundTint="@color/darkblue"
        android:textColor="@color/lightblue"
        android:layout_margin="25dp"
        />

    <Button
        android:id="@+id/createBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Create Chat"
        android:textSize="25sp"
        android:backgroundTint="@color/darkblue"
        android:textColor="@color/lightblue"
        android:layout_margin="25dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>